<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>search_handler</servlet-name>
        <servlet-class>swm.group18.healthcare.servlets.SearchRequestHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search_handler</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>indexing_handler</servlet-name>
        <servlet-class>swm.group18.healthcare.servlets.IndexRequestHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>indexing_handler</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

</web-app>